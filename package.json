{
  "name": "but-x",
  "version": "1.102.0",
  "private": true,
  "scripts": {
    "start": "node --stack-size=20000 ./bin/cluster",
    "stop": "node ./scripts/stop_but-x.js",
    "start-instance": "npm run prestart && node --stack-size=20000 ./bin/cluster 1",
    "start-pm2": "npm run prestart \"pm2\" && pm2 start ./bin/instance -i 0 -n but-x -p \"./tmp/pm2.pid\" --node-args=\"--stack-size=20000\"",
    "start-pm2-debug": "npm run prestart \"pm2\" && pm2 start ./bin/instance -i 0 -n but-x -p \"./tmp/pm2.pid\" --node-args=\"--stack-size=20000\" && pm2 logs",
    "stop-pm2": "pm2 stop but-x",
    "reload-pm2": "pm2 reload but-x",
    "test": "node ./node_modules/jasmine/bin/jasmine.js test/*Spec.js",
    "prestart": "node ./scripts/prestart.js",
    "sync-blocks": "node ./scripts/sync_chain.js mainnet",
    "sync-markets": "node ./scripts/sync_markets.js mainnet",
    "sync-peers": "node ./scripts/sync_peers.js mainnet",
    "sync-masternodes": "node ./scripts/sync_masternodes.js mainnet",
    "sync-richlist": "node ./scripts/sync_richlist.js mainnet",
  },
  "dependencies": {
    "@isaacs/ttlcache": "^1.4.1",
    "async": "^3.2.5",
    "bad-words": "^3.0.4",
    "body-parser": "^1.20.2",
    "cookie-parser": "^1.4.6",
    "debug": ">=4.3.4",
    "detect-port": "^1.5.1",
    "express": "^4.19.2",
    "intl": "^1.2.5",
    "jsonminify": "^0.4.2",
    "lodash": "^4.17.21",
    "mongodb": "^6.5.0",
    "mongoose": "^8.2.4",
    "morgan": ">=1.10.0",
    "postman-request": "^2.88.1-postman.33",
    "pug": "~3.0.2",
    "qr-image": "^3.2.0",
    "readline-sync": "^1.4.10",
    "sass": "^1.72.0",
    "serve-favicon": "^2.5.0",
    "serve-static": "^1.15.0"
  },
  "devDependencies": {
    "jasmine": "^5.1.0",
    "pm2": "^5.3.1"
  }
}
