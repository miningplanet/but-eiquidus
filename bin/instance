#!/usr/bin/env node
const debug = require('debug')('debug');
const settings = require('../lib/settings');
const detect = require('detect-port');
const db = require('../lib/database');
const app = require('../app');

app.set('port', process.env.PORT || settings.webserver.port);

const dbstrings = settings.getDbs()

db.connection_factory('mainnet', dbstrings[0], function(conn) {
  db.initialize_data_startup(function() {
    var port = app.get('port')
    detect(port).then(function(result) {
      console.log('Detected port %s.', result)
      if (port !== result -1) {
        console.log('Starting...')
        var server = app.listen(app.get('port'), '::', function() {
          debug('Express server listening on port ' + server.address().port);
        });
        process.on('SIGINT', () => {
          console.log('Stopping...')
          server.close(() => {
            var mongoose = require('mongoose');
            mongoose.connection.close(false).then(() => {
              // close the main process now that all http and database connections have closed
              console.log('Exit...')
              process.exit(0);
            }).catch((err) => {
              console.log(err);
              process.exit(1);
            });
          });
        });
      }
    })
  }, 'mainnet');
});

db.connection_factory('testnet', dbstrings[1], function(conn) {
  db.initialize_data_startup(function() {
    // NOOP
  }, 'testnet');
});

module.exports = {
  db: db
}