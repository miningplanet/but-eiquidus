script(type='text/javascript', src='/js/luxon.min.js')
script.
  function format_unixtime(unixtime, alt) {
    if (alt == null)
      alt = false;
    // check if this date should be displayed in utc or local timezone
    if (('#{shared_pages.date_time.timezone}'.toLowerCase() == 'local' && !alt) || ('#{shared_pages.date_time.timezone}'.toLowerCase() == 'utc' && alt))
      return luxon.DateTime.fromSeconds(unixtime).toLocal().toFormat('#{shared_pages.date_time.display_format}');
    else
      return luxon.DateTime.fromSeconds(unixtime).toUTC().toFormat('#{shared_pages.date_time.display_format}');
  }