extends layout

block content
  .col-xs-12.col-md-12
    if error_page.page_header.show_img == true || error_page.page_header.show_title == true || error_page.page_header.show_description == true
      #page-header-container(style='align-items:' + (error_page.page_header.show_img == true && error_page.page_header.show_title == true && error_page.page_header.show_description == true ? 'flex-start' : 'center'))
        if error_page.page_header.show_img == true
          #header-img-container
            img#header-img(src=page_title_logo)
        #page-title-container
          if error_page.page_header.show_title == true
            h3#page-title=settings.locale.error_title.replace('{1}', settings.coin.name)
          if error_page.page_header.show_description == true
            if error_page.page_header.show_title != true
              #page-title-container
                .sub-page-header.text-muted=(error.status == null ? settings.locale.error_description_alt : settings.locale.error_description)
            else
              .sub-page-header.text-muted=(error.status == null ? settings.locale.error_description_alt : settings.locale.error_description)
      .cardSpacer.clearfix
    h2=(error.status == null ? '' : error.status + ' ') + message